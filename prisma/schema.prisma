// Prisma schema file
// See https://www.prisma.io/docs/concepts/components/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  email String @db.VarChar(255) @unique
  password String @db.VarChar(255)
  token String @db.VarChar(255) @unique
  name String @db.VarChar(255)
  createdAt DateTime @default(now())
  lastLoginAt DateTime @default(now())
  isActive Boolean @default(true)

  @@index([email])
  @@index([token])
}

model AuctionModel {
  id Int @id @default(autoincrement())
  totalCount Float @unique
  title String @unique
  image String @default("default.jpeg")
  imageUrl String @unique
  status Boolean @unique
  date DateTime @default(now())
  organizerId Float @unique
  organizer String @default("null")
  isDeleted Boolean @default(false)
  createdDate DateTime @default(now())
  updatedAt DateTime @default(now())

@@index([totalCount])
@@index([title])
@@index([image])
@@index([imageUrl])
@@index([status])
@@index([date])
@@index([organizerId])
@@index([organizer])
@@index([isDeleted])
@@index([createdDate])
@@index([updatedAt])
}
